<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="399dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.153"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView"
            android:gravity="center"
            android:textSize="30dp"
            app:layout_constraintHorizontal_bias="0.487"
            android:text="0" />
    <Button
            android:text="+"
            android:layout_width="172dp"
            android:layout_height="159dp" android:id="@+id/btnPlus"
            app:layout_constraintVertical_bias="0.57"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"
            android:textSize="50dp" app:layout_constraintBottom_toTopOf="@+id/btnReset"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="-"
            android:layout_width="172dp"
            android:layout_height="159dp"
            android:id="@+id/btnMinus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp"
            app:layout_constraintVertical_bias="0.57"
            android:textSize="50dp" app:layout_constraintBottom_toTopOf="@+id/btnReset"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="reset"
            android:layout_width="395dp"
            android:layout_height="95dp"
            android:id="@+id/btnReset"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.52"
            android:textSize="35dp"/>
    <EditText
            android:layout_width="231dp"
            android:layout_height="90dp"
            android:inputType="number"
            android:hint="@string/edit_hint"
            android:ems="10"
            android:id="@+id/inputNum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="96dp"
            app:layout_constraintVertical_bias="0.227" app:layout_constraintTop_toBottomOf="@+id/btnReset"/>
    <Button
            android:text="set"
            android:layout_width="106dp"
            android:layout_height="89dp"
            android:id="@+id/btnSet"
            app:layout_constraintStart_toEndOf="@+id/inputNum"
            android:layout_marginStart="64dp"
            tools:ignore="MissingConstraints"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.226"
            app:layout_constraintTop_toBottomOf="@+id/btnReset"/>

</androidx.constraintlayout.widget.ConstraintLayout>