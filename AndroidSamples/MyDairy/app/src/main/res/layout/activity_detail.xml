<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">

    <ImageView
            android:layout_width="249dp"
            android:layout_height="178dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/detailImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="0.04"/>
    <TextView
            android:layout_width="419dp"
            android:layout_height="191dp" android:id="@+id/detailContentTextView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailImageView" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:layout_width="197dp"
            android:layout_height="49dp" android:id="@+id/detailDateTextView"
            app:layout_constraintTop_toBottomOf="@+id/detailContentTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <FrameLayout
            android:layout_width="588dp"
            android:layout_height="245dp"
            app:layout_constraintTop_toBottomOf="@+id/detailDateTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="52dp"
            android:id="@+id/content">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>