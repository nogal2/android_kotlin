<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="5dp">



    <ImageView
            android:layout_width="61dp"
            android:layout_height="55dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/bbsImageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>
    <TextView
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/bbsImageView" android:layout_marginStart="16dp"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="@+id/bbsImageView"/>
    <TextView
            android:text="날짜"
            android:layout_width="104dp"
            android:layout_height="wrap_content" android:id="@+id/datetextView"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/bbsImageView"
            app:layout_constraintTop_toTopOf="@+id/bbsImageView" android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="주소"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:id="@+id/addrTextView"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/datetextView" android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/datetextView"/>


</androidx.constraintlayout.widget.ConstraintLayout>