<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/response"
            android:layout_width="365dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="환영합니다"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.417"
            app:layout_constraintVertical_bias="0.108"/>
    <Button
            android:text="정답보기"
            android:layout_width="170dp"
            android:layout_height="72dp"
            android:id="@+id/btnStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            android:layout_marginBottom="72dp" app:layout_constraintTop_toBottomOf="@+id/response"
            app:layout_constraintVertical_bias="0.986"/>
    <Button
            android:text="다시하기"
            android:layout_width="170dp"
            android:layout_height="72dp"
            android:id="@+id/btnReset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.758"
            android:layout_marginBottom="72dp" app:layout_constraintTop_toBottomOf="@+id/response"
            app:layout_constraintVertical_bias="0.986"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="숫자 입력"
            android:ems="10"
            android:id="@+id/userNum"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/response" android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.251"/>
    <Button
            android:text="enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnEnter"
            app:layout_constraintStart_toEndOf="@+id/userNum" app:layout_constraintTop_toBottomOf="@+id/response"
            android:layout_marginTop="80dp" android:layout_marginStart="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>