<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/counter_num"
            android:layout_width="459dp"
            android:layout_height="57dp"
            android:text="0"
            android:gravity="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.085"
            />
    <Button
            android:id="@+id/minus_btn"
            android:text="-"
            android:textSize="80sp"
            android:layout_width="214dp"
            android:layout_height="172dp"
            app:layout_constraintBottom_toTopOf="@+id/reset_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="68dp"
            app:layout_constraintTop_toBottomOf="@+id/counter_num" android:layout_marginTop="64dp"
            app:layout_constraintVertical_bias="0.02"/>
    <Button
            android:id="@+id/plus_btn"
            android:text="+"
            android:textSize="80sp"
            android:layout_width="214dp"
            android:layout_height="172dp"
            app:layout_constraintBottom_toTopOf="@+id/reset_btn"
            android:layout_marginBottom="36dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp"
            app:layout_constraintTop_toBottomOf="@+id/counter_num" android:layout_marginTop="52dp"/>
    <Button
            android:id="@+id/reset_btn"
            android:text="reset"
            android:textSize="30sp"
            android:layout_width="463dp"
            android:layout_height="55dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.464"/>
    <EditText
            android:layout_width="329dp"
            android:layout_height="41dp"
            android:inputType="number"
            android:text="0"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/reset_btn"
            android:layout_marginTop="76dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_btn"
            app:layout_constraintTop_toBottomOf="@+id/reset_btn"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toEndOf="@+id/editText"
            android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.021"/>

</androidx.constraintlayout.widget.ConstraintLayout>