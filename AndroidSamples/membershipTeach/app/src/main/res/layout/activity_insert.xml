<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:text="이름"
            android:layout_width="90dp"
            android:layout_height="44dp" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="104dp" android:layout_marginStart="68dp"/>
    <TextView
            android:text="나이"
            android:layout_width="90dp"
            android:layout_height="44dp" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="72dp"/>
    <TextView
            android:text="주소"
            android:layout_width="90dp"
            android:layout_height="44dp" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="68dp"/>
    <EditText
            android:layout_width="336dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/insertName"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="72dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="104dp"/>
    <EditText
            android:layout_width="336dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/insertAge"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="72dp"
            app:layout_constraintTop_toBottomOf="@+id/insertName" android:layout_marginTop="56dp"/>
    <EditText
            android:layout_width="336dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/insertAddress"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/insertAge" android:layout_marginTop="44dp"
            android:layout_marginStart="72dp"/>
    <Button
            android:text="추가"
            android:layout_width="204dp"
            android:layout_height="86dp" android:id="@+id/insert"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.6"/>
</androidx.constraintlayout.widget.ConstraintLayout>