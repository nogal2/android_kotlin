<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/textView"
            android:layout_width="244dp"
            android:layout_height="54dp"
            android:text="회원관리"
            android:textAlignment="center"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06"/>
    <Button
            android:text="회원추가"
            android:layout_width="173dp"
            android:layout_height="67dp" android:id="@+id/insertBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="회원삭제"
            android:layout_width="173dp"
            android:layout_height="67dp" android:id="@+id/deleteBtn"
            app:layout_constraintTop_toBottomOf="@+id/insertBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="64dp"/>
    <Button
            android:text="회원검색"
            android:layout_width="173dp"
            android:layout_height="67dp" android:id="@+id/selectBtn"
            app:layout_constraintTop_toBottomOf="@+id/deleteBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="60dp"/>
    <Button
            android:text="회원수정"
            android:layout_width="173dp"
            android:layout_height="67dp" android:id="@+id/updateBtn"
            app:layout_constraintTop_toBottomOf="@+id/selectBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="64dp"/>
    <Button
            android:text="회원모두출력"
            android:layout_width="173dp"
            android:layout_height="67dp" android:id="@+id/allPrintBtn"
            app:layout_constraintTop_toBottomOf="@+id/updateBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="64dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>