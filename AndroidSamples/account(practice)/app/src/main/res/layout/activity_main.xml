<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066"
            android:id="@+id/mainTextView"/>
    <Button
            android:text="추가"
            android:layout_width="151dp"
            android:layout_height="74dp" android:id="@+id/insertBtn"
            app:layout_constraintTop_toBottomOf="@+id/mainTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.068" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"/>
    <Button
            android:text="기간검색"
            android:layout_width="151dp"
            android:layout_height="74dp" android:id="@+id/selectsBtn"
            app:layout_constraintTop_toBottomOf="@+id/mainTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.297" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"/>
    <Button
            android:text="검색"
            android:layout_width="151dp"
            android:layout_height="74dp" android:id="@+id/selectBtn"
            app:layout_constraintTop_toBottomOf="@+id/mainTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.07" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.573" app:layout_constraintStart_toEndOf="@+id/insertBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>