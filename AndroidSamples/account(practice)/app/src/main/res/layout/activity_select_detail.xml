<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".selectDetailActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내역"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066"
            android:id="@+id/selDetTextView"/>
    <TextView
            android:text="제목"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeTit"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/selDetTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:layout_marginTop="32dp"/>
    <TextView
            android:text="날짜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeDate"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDeTit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp" android:layout_marginStart="60dp"/>
    <TextView
            android:text="금액"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeAmount"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDeDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="56dp" android:layout_marginStart="60dp"/>
    <TextView
            android:text="내용"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeMemo"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDeAmount" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="52dp" android:layout_marginStart="60dp"/>
    <TextView
            android:text="수입/지출"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeIcgo"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDeMemo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:layout_marginTop="52dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeTitCont"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textViewDeTit"
            android:layout_marginStart="48dp" app:layout_constraintTop_toTopOf="@+id/textViewDeTit"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeDateCont"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textViewDeDate"
            android:layout_marginStart="48dp" app:layout_constraintTop_toTopOf="@+id/textViewDeDate"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeAmountCont"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textViewDeAmount"
            app:layout_constraintTop_toTopOf="@+id/textViewDeAmount"
            android:layout_marginStart="48dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeMemoCont"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textViewDeMemo"
            app:layout_constraintTop_toTopOf="@+id/textViewDeMemo"
            android:layout_marginStart="48dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDeIcgoCont"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textViewDeIcgo"
            app:layout_constraintTop_toTopOf="@+id/textViewDeIcgo"
            android:layout_marginStart="44dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>