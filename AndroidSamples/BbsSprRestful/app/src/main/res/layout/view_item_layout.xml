<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:context=".BbsListActivity">

    <TextView
            android:textSize="15sp"
            android:layout_width="29dp"
            android:layout_height="35dp" android:id="@+id/bbsSeqTextView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="16dp"/>
    <TextView
            android:textSize="15sp"
            android:layout_width="472dp"
            android:layout_height="35dp" android:id="@+id/bbsTitleTextView"
            app:layout_constraintStart_toEndOf="@+id/bbsSeqTextView"
            app:layout_constraintTop_toTopOf="@+id/bbsSeqTextView"
            android:layout_marginStart="40dp"/>
    <TextView
            android:textSize="15sp"
            android:layout_width="147dp"
            android:layout_height="22dp" android:id="@+id/bbsIdTextView"
            app:layout_constraintStart_toStartOf="@+id/bbsTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/bbsTitleTextView" android:layout_marginTop="12dp"/>
    <TextView
            android:textSize="15sp"
            android:layout_width="147dp"
            android:layout_height="22dp" android:id="@+id/bbsReadCountTextView"
            app:layout_constraintStart_toEndOf="@+id/bbsIdTextView"
            app:layout_constraintTop_toTopOf="@+id/bbsIdTextView" android:layout_marginStart="104dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>