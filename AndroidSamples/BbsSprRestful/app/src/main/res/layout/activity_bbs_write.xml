<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BbsWriteActivity">

    <TextView
            android:text="글쓰기"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.029" android:id="@+id/textView4"/>
    <TextView
            android:text="Id"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:background="@drawable/box_border"
            android:layout_height="45dp" android:id="@+id/w"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="64dp"/>
    <TextView
            android:text="제목"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:background="@drawable/box_border"
            android:layout_height="45dp" android:id="@+id/writeIdTextView3"
            app:layout_constraintStart_toStartOf="@+id/w"
            app:layout_constraintTop_toBottomOf="@+id/w"
            android:layout_marginTop="52dp"/>
    <TextView
            android:text="내용"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:background="@drawable/box_border"
            android:layout_height="45dp" android:id="@+id/writeIdTextView5"
            app:layout_constraintStart_toStartOf="@+id/writeIdTextView3"
            app:layout_constraintTop_toBottomOf="@+id/writeIdTextView3"
            android:layout_marginTop="56dp"/>
    <TextView
            android:textSize="30sp"
            android:layout_width="296dp"
            android:layout_height="45dp" android:id="@+id/writeIdTextView"
            app:layout_constraintStart_toEndOf="@+id/w"
            app:layout_constraintTop_toTopOf="@+id/w" android:layout_marginStart="40dp"/>
    <EditText
            android:layout_width="275dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/box_border"
            android:id="@+id/writeTitleEditText"
            app:layout_constraintTop_toTopOf="@+id/writeIdTextView3"
            app:layout_constraintStart_toEndOf="@+id/writeIdTextView3" android:layout_marginStart="28dp"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="359dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/box_border"
            android:id="@+id/writeContentEditText"
            app:layout_constraintTop_toTopOf="@+id/writeIdTextView5"
            app:layout_constraintStart_toEndOf="@+id/writeIdTextView5"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="작성완료"
            android:layout_width="198dp"
            android:layout_height="80dp" android:id="@+id/addWriteBtn"
            app:layout_constraintTop_toBottomOf="@+id/writeContentEditText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            android:layout_marginStart="184dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>