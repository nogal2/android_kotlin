<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="id"
            android:textSize="30sp"
            android:layout_width="40dp"
            android:layout_height="36dp" android:id="@+id/idTextView"
            android:background="@drawable/box_border"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="268dp" android:layout_marginStart="116dp"/>
    <TextView
            android:text="pw"
            android:textSize="30sp"
            android:layout_width="40dp"
            android:background="@drawable/box_border"
            android:layout_height="36dp" android:id="@+id/pwTextView"
            app:layout_constraintStart_toStartOf="@+id/idTextView"
            app:layout_constraintTop_toBottomOf="@+id/idTextView" android:layout_marginTop="60dp"/>
    <EditText
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idEditText"
            android:layout_width="287dp" app:layout_constraintStart_toEndOf="@+id/idTextView"
            android:layout_marginStart="36dp" app:layout_constraintTop_toTopOf="@+id/idTextView"/>
    <EditText
            android:layout_width="287dp"
            android:layout_height="38dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pwEditText"
            app:layout_constraintStart_toEndOf="@+id/pwTextView" app:layout_constraintTop_toTopOf="@+id/pwTextView"
            android:layout_marginStart="36dp"/>
    <Button
            android:text="로그인"
            android:layout_width="296dp"
            android:layout_height="70dp" android:id="@+id/loginBtn"
            app:layout_constraintTop_toBottomOf="@+id/pwEditText"
            android:layout_marginTop="56dp" app:layout_constraintStart_toStartOf="@+id/pwEditText"/>
</androidx.constraintlayout.widget.ConstraintLayout>