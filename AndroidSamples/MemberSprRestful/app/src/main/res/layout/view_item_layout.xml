<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:context=".MainActivity">


    <TextView
            android:text="아이디"
            android:layout_width="115dp"
            android:layout_height="40dp" android:id="@+id/idText"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="이름"
            android:layout_width="118dp"
            android:layout_height="40dp" android:id="@+id/nameText"
            app:layout_constraintStart_toEndOf="@+id/idText" app:layout_constraintTop_toTopOf="@+id/idText"
            android:layout_marginStart="56dp"/>
    <TextView
            android:text="이메일"
            android:layout_width="194dp"
            android:layout_height="40dp" android:id="@+id/emailText"
            app:layout_constraintStart_toEndOf="@+id/nameText" app:layout_constraintTop_toTopOf="@+id/nameText"
            android:layout_marginStart="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>